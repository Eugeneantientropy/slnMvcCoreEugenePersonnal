@{
    ViewBag.Title = "Login";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow p-3 mb-5 bg-white rounded" style="width: 350px;">
        <div class="card-body">
            <h2 class="text-center">登入系統</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="text-center">
                    <h4>輸入帳號與密碼</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group mt-2">
                        <label>帳號(Email)</label>
                        @Html.TextBox("txtAccount", "eugene@gmail.com", new { @class = "form-control" })
                    </div>
                    <div class="form-group mt-2">
                        <label>密碼</label>
                        @Html.TextBox("txtPassword", "123456", new { @class = "form-control" })
                    </div>
                    <div class="form-group mt-2">
                        <input type="submit" value="登入" class="btn btn-primary w-100" />
                    </div>
                </div>
            }
            <div class="text-center">
                @Html.ActionLink("忘記密碼", "List")
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>