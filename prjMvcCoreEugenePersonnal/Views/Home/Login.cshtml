@{
    ViewBag.Title = "Login";
}

<h2>登入系統</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>輸入帳號與密碼</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group mt-1">
            帳號(Email)
            <div class="col-md-10 mt-1">
                @Html.TextBox("txtAccount", "eugene@gmail.com", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group mt-1">
            密碼
            <div class="col-md-10 mt-1">
                @Html.TextBox("txtPassword", "123456", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="登入" class="btn btn-primary mt-3" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("忘記密碼", "List")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>