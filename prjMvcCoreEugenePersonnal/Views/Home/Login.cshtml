@{
    ViewBag.Title = "Login";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow p-3 mb-5 bg-white rounded" style="width: 350px;">
        <div class="card-body">
            <h2 class="text-center">登入系統</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="text-center">
                    <h4>輸入帳號與密碼</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group mt-2">
                        <label>帳號(Email)</label>
                        @Html.TextBox("txtAccount", "gaby@gmail.com", new { @class = "form-control" })
                    </div>
                    <div class="form-group mt-2">
                        <label>密碼</label>
                        <div class="input-group">
                            @Html.Password("txtPassword", "", new { @class = "form-control", id = "txtPassword" })

                        </div>
                    </div>
                    <div class="form-group mt-2">
                        <input type="submit" value="登入" class="btn btn-primary w-100" />
                    </div>
                </div>
            }
            <div class="text-center">
                @Html.ActionLink("忘記密碼", "ForgetPwd", "User")
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


