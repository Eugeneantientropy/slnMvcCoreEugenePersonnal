@using System.Text.Json;
<style>
    body div.alert {
        position: absolute;
        top: 100px;
        width: 400px;
        display: flex;
        text-align: center;
        align-items: center;
        z-index: 9999;
    }

        body div.alert strong {
            font-size: 1.5rem;
        }

        body div.alert button.btn-close {
            top: unset;
        }
</style>

@{

    TempData.TryGetValue("message", out object? o);
    if (o != null)
    {
        CAlertMessage? message = JsonSerializer.Deserialize<CAlertMessage>((string)o);
        if (message == null)
        {
            return;
        }
        if (message.AlertMessage == CDictionary.Success)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>@message.AlertMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>

            // <div class="alert alert-success alert_message">
            //     @message.alertMessage
            // </div>
        }
        else if (message.AlertStatus == CDictionary.Warning)
        {
            <div class="alert alert-warning alert_message">
                @message.AlertMessage
            </div>
        }
        else if (message.AlertStatus == CDictionary.Danger)
        {
            <div class="alert alert-danger alert_message">
                @message.AlertMessage
            </div>
        }
        else if (message.AlertStatus == CDictionary.Error)
        {
            <div class="alert alert-error alert_message">
                @message.AlertMessage
            </div>
        }

    }

}

<script>
    let alertBox = document.querySelector(".alert");
    let timer = setTimeout(function () {
        alertBox.remove();
    }, 5000);
</script>