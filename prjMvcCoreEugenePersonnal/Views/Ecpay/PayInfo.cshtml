@model System.Collections.Generic.Dictionary<string, string>

<style>
    .container {
        font-size: 24px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 80vh;
        width: 30vw;
        text-align: center;
        border: 2px solid #000;
        padding: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
        padding: 0px 10px;
    }

    /*        .container div {
                margin-bottom: 20px; */

    h2 {
        display: flex;
        font-size: 60px;
        align-items: center;
        margin-bottom: 10px;
    }

        h2 .fa-solid {
            color: green;
            margin-right: 10px;
        }

    label {
        font-weight: bold;
    }

    .btn {
        width: 200px;
    }
</style>

<div>
    <div class="container mt-5 mb-5">
        <h2>
            <i class="fa-solid fa-check-double"></i>
            結帳成功
        </h2>

        @foreach (var key in @Model.Keys.ToList())
        {
            if (key == "TradeAmt")
            {
                <div class="mt-2">
                    <label>總金額:</label>
                    <label>@Model[key] NT$</label>
                </div>
            }
            else if (key == "TradeDate")
            {
                <div class="mt-2">
                    <label>結帳時間:</label>
                    <label>@Model[key]</label>
                </div>
            }
            else if (key == "ActivityID")
            {
                <div class="mt-2">
                    <label>商品編號:</label>
                    <label>@Model[key]</label>
                </div>
            }
           
        }
        <div class="mt-3">
            <p>
                商品將於3-5個工作天內寄出,本公司不會主動電話聯繫操作轉帳事宜,如有冒稱本公司名稱皆為詐騙集團。
            </p>
        </div>
        <div class="mb-3 mt-3 d-flex justify-content-center align-items-center mx-auto">
            <button type="button" class="btn btn-outline-danger btn-cancel btn_cancel  me-2" id="btn_edit" onclick="window.location.href='@Url.Action("Index", "Home")'">回首頁</button>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

