@model IEnumerable<prjMvcCoreEugenePersonnal.Models.User>

@{
    ViewData["Title"] = "List";
}
@using (Html.BeginForm())
{
    @:關鍵字
    @Html.TextBox("txtKeyWord")
    <input type="submit" value="查詢"/>
}
<h1>客戶資料一覽表</h1>

<p>
    <a asp-action="Create">新增客戶</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               序號
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PasswordHash)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateRegistered)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastLogin)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0; 
            foreach (var item in Model) {
                count++;
                <tr>
            <td>
                @count
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PasswordHash)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateRegistered)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastLogin)
            </td>
            <td>
                @Html.ActionLink("修改", "Edit", new { id=item.UserId }) |
                @Html.ActionLink("刪除", "Delete","User", new { id=item.UserId }, new{onclick="return confirm('確定要刪除嗎?')"})
            </td>
        </tr>
}}
    </tbody>
</table>
